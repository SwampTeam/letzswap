{% extends 'base.html.twig' %}

{% block title %}Items index{% endblock %}

{% block body %}
    <h1>Items index</h1>
    <table>
        <thead>
        <tr>
            <th>User</th>
            <th>Title</th>
            <th>Description</th>
            <th>Condition Status</th>
            <th>Admin Actions</th>
            <th>Picture</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.getUser().getUsername() }}</td>
                <td>{{ item.title }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.conditionStatus }}</td>
                <td>
                    <a href="{{ path('item_details', {'id': item.getId()}) }}">details</a>
                    <a href="{{ path('item_edit', {'id': item.getId()}) }}">edit</a>
                </td>
                {% for picture in pictures %}
                    {% if picture.item.id  == item.getId() %}
                        <td><img src="{{ path('get_picture_content', {'picture': picture.getId()}) }}"
                                 alt="{{ item.title }}" width="50px">
                        </td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no items found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('item_new') }}">Insert new item</a>
{% endblock %}