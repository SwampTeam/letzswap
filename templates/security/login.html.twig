{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="login_page">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputUsername" class="sr-only">{{ 'LOGIN.USERNAME.LABEL' | trans }}</label>
        <input type="text" value="{{ last_username }}" name="username" class="form-control form_grey_input inputUsername"
               placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">{{ 'LOGIN.PASSWORD.LABEL' | trans }}</label>
        <input type="password" name="password" class="form-control form_grey_input inputPassword" placeholder="Password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!--Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html-->

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'LOGIN.SUBMIT' | trans }}
        </button>
    </form>
{% endblock %}

